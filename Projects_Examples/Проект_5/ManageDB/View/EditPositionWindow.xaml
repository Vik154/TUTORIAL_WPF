<Window x:Class="ManageDB.View.EditPositionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManageDB.View"
        mc:Ignorable="d"
        Title="EditPositionWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="200">

            <TextBlock Text="New name" Margin="0,5,0,0"/>
            <TextBox Text="" Margin="0,5,0,0"/>
            <TextBlock Text="New salary" Margin="0,5,0,0"/>
            <TextBox Text="" Margin="0,5,0,0"/>
            <TextBlock Text="New max of vacancies" Margin="0,5,0,0"/>
            <TextBox Text="" Margin="0,5,0,0"/>
            <TextBlock Text="New department" Margin="0,5,0,0"/>
            <ComboBox Margin="0,5,0,0"/>
        </StackPanel>

        <Button Grid.Row="1">
            Edit position
        </Button>
    </Grid>
</Window>
